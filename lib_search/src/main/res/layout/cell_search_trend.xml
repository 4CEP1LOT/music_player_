<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="visible">

    <RelativeLayout
        android:id="@+id/linear_layout"
        android:layout_width="40dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/trend_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="1"
            android:textSize="15sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/trend_pic"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_marginStart="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/trend_name"
        app:layout_constraintEnd_toEndOf="@+id/trend_content"
        app:layout_constraintStart_toEndOf="@+id/trend_name"
        app:layout_constraintTop_toTopOf="@+id/trend_name" />


    <TextView
        android:id="@+id/trend_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="搁浅"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/trend_content"
        app:layout_constraintStart_toEndOf="@+id/linear_layout"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/trend_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/trend_name"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="16dp"
        android:text="瞎说什么大实话"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/linear_layout"
        app:layout_constraintTop_toBottomOf="@+id/trend_name" />

    <TextView
        android:id="@+id/trend_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/trend_name"
        android:layout_marginEnd="16dp"
        android:text="瞎说什么大实话"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/trend_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/trend_name" />

</androidx.constraintlayout.widget.ConstraintLayout>