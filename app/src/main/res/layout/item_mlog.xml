<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
  >

    <androidx.cardview.widget.CardView
        android:id="@+id/mlog_card"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="right"
                app:srcCompat="@android:drawable/ic_media_play" />

            <ImageView
                android:id="@+id/mlog_pic"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentEnd="true" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mlog_text">

                <ImageView
                    android:id="@+id/creator_avatar"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"
                    tools:srcCompat="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/mlog_creator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="5dp"
                    android:layout_toEndOf="@+id/creator_avatar"
                    android:textSize="10sp"
                    tools:text="吃饭睡觉打豆豆" />

            </RelativeLayout>

            <TextView
                android:id="@+id/mlog_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mlog_pic"
                android:layout_gravity="bottom"
                android:padding="5dp"
                android:textSize="10sp" />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>
