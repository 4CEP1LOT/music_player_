<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">



  <RelativeLayout
    android:id="@+id/content_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    android:paddingStart="5dp"
    android:paddingTop="5dp">

    <ImageView
      android:id="@+id/nfs_album"
      android:layout_width="45dp"
      android:layout_height="45dp"
      android:scaleType="fitXY" />

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_marginStart="5dp"
      android:layout_toRightOf="@id/nfs_album"
      android:orientation="vertical">

      <TextView
        android:id="@+id/nfs_song"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#333333"
        android:textSize="16sp"
        tools:text="四块五" />

      <TextView
          android:id="@+id/nfs_singer"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="#999999"
          android:textSize="12sp"
          tools:text="隔避老攀" />
    </LinearLayout>

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"
      android:orientation="horizontal">

      <ImageView
        android:id="@+id/nfs_play"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/note_btn_play_white" />

      <ImageView
          android:id="@+id/nfs_next"
          android:layout_width="25dp"
          android:layout_height="25dp"
          android:layout_gravity="center_vertical"
          android:layout_marginStart="25dp"

          android:src="@mipmap/note_btn_next_white" />

      <TextView
        android:id="@+id/nfs_lyrics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
          android:text="词"
          android:textSize="25dp"

        android:layout_marginEnd="20dp"
        android:layout_marginStart="25dp"
        android:src="@mipmap/audio_black_cat" />
    </LinearLayout>

  </RelativeLayout>

</RelativeLayout>